    <!-- region 评分页面所使用的style -->
    <!-- ConstraintLayout使用的style -->
    <style name="style_library_book_detail_score_constraint_layout">
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- TextView使用的Style -->
    <style name="style_library_book_detail_score_text_view">
        <item name="android:textColor">@color/text_color_common</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Divider所使用的Style -->
    <style name="style_library_book_detail_score_material_divider">
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!-- ImageView所使用的Style -->
    <style name="style_library_book_detail_score_image_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:src">@drawable/xing</item>
    </style>
    <!-- endregion -->

    <!-- 用于控制封面时的垂直padding -->
    <dimen name="book_detail_cover_vertical_padding">8dp</dimen>
